    <style>
        /* Custom styles for aesthetic */
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap');
        body {
            font-family: 'Inter', sans-serif;
            scroll-behavior: smooth;
        }
        .section-header {
            position: relative;
            display: inline-block;
            margin-bottom: 2rem;
        }
        .section-header::after {
            content: '';
            position: absolute;
            bottom: -5px;
            left: 0;
            width: 50%;
            height: 3px;
            background-color: #3b82f6; /* Blue-500 */
            border-radius: 9999px;
        }
        /* Chart specific styling */
        .chart-container {
            height: 18rem; /* 72 units height */
            position: relative;
        }
        .bar {
            width: 100%;
            transition: all 0.5s ease-out;
            position: absolute; /* Allows for growth from the 0% line */
            border-radius: 0.375rem 0.375rem 0 0; /* rounded top */
        }
        .bar-positive {
            background-color: #10b981; /* secondary - green */
            bottom: 50%; /* Starts at the 0% line */
            transform-origin: bottom; /* Scales up from the bottom */
        }
        .bar-negative {
            background-color: #ef4444; /* tertiary - red */
            top: 50%; /* Starts at the 0% line */
            transform-origin: top; /* Scales down from the top */
            border-radius: 0 0 0.375rem 0.375rem; /* rounded bottom */
        }
    </style>
    <script>
        // Data for the chart: { month, value, isPositive }
        const monthlyData = [
            { month: 'Jan', value: 8.72, isPositive: true },
            { month: 'Feb', value: 3.43, isPositive: true },
            { month: 'Mar', value: 9.46, isPositive: false },
            { month: 'Apr', value: 1.63, isPositive: false },
            { month: 'May', value: 13.16, isPositive: true },
            { month: 'Jun', value: 7.32, isPositive: true },
            { month: 'Jul', value: 10.94, isPositive: true },
            { month: 'Aug', value: 4.93, isPositive: false },
            { month: 'Sep', value: 5.29, isPositive: true },
            { month: 'Okt', value: 13.12, isPositive: true },
            { month: 'Nov', value: 2.20, isPositive: true },
            { month: 'Dec', value: 0, isPositive: true } // Placeholder for December
        ];

        // Maximum visual range (used for scaling the bars)
        const maxRange = 20; // Represents 20% on the chart grid

        function initializeChart() {
            const container = document.getElementById('chart-bars-container');
            if (!container) return;

            // Calculate the height of the bar based on the 50% max height
            const calculateHeight = (value) => {
                // Scale value relative to maxRange (20) and multiply by 50% (half the chart height)
                const percentage = (Math.abs(value) / maxRange) * 50;
                return `${percentage}%`;
            };

            monthlyData.forEach(data => {
                // Main container for the bar and label
                const barWrapper = document.createElement('div');
                barWrapper.className = 'flex flex-col items-center mx-2 w-6 md:w-8 relative h-full';

                // Bar element
                const bar = document.createElement('div');
                bar.className = 'bar';
                bar.style.height = calculateHeight(data.value);

                // Label element
                const label = document.createElement('span');
                label.className = 'text-xs text-gray-400 absolute bottom-[-1.5rem]';
                label.textContent = data.month;

                // Position and color the bar
                if (data.isPositive) {
                    bar.classList.add('bar-positive');
                } else {
                    bar.classList.add('bar-negative');
                }

                // Append elements
                barWrapper.appendChild(bar);
                barWrapper.appendChild(label);
                container.appendChild(barWrapper);
            });
        }

        // Mobile menu toggle logic functions (defined globally)
        function toggleMenu() {
            const mobileMenu = document.getElementById('mobile-menu');
            if (mobileMenu) {
                mobileMenu.classList.toggle('hidden');
            }
        }

        function closeMenu() {
            const mobileMenu = document.getElementById('mobile-menu');
            if (mobileMenu) {
                mobileMenu.classList.add('hidden');
            }
        }
        
        // This function runs once the entire page is loaded
        window.onload = function() {
            // Apply Tailwind configuration after the CDN script has loaded
            tailwind.config = {
                theme: {
                    extend: {
                        colors: {
                            'primary': '#3b82f6', // Blue-500
                            'secondary': '#10b981', // Emerald-500 (Used for positive returns)
                            'tertiary': '#ef4444', // Red-500 (Used for negative returns)
                        },
                    }
                }
            }
            
            // Mobile menu event listeners (now runs after HTML is parsed)
            const menuButton = document.getElementById('menu-button');
            if (menuButton) {
                menuButton.addEventListener('click', toggleMenu);
            }
            
            document.getElementById('current-year').textContent = new Date().getFullYear();
            initializeChart();
        };
    </script>
</head>
